<%  p = FormPresenter.new( f, self ) %>
<div class="notes">
  <span class="mark">*</span>印の付いた項目は入力必須です。
</div>

<fieldset id="customer-fields">
  <legend>基本情報</legend>
  <%= render "customer_fields", f: f %>
</fieldset>

<%=  p.check_box_block( :inputs_home_address, "自宅住所を入力する" ) %>

<fieldset id="home-address-fields">
  <legend>自宅住所</legend>
  <%= render "address_fields", f: f, kind_of: :home, 
                                    obj: f.object.home_address  %>
</fieldset>

<%=  p.check_box_block( :inputs_work_address, "務先を入力する" ) %>

<fieldset id="work-address-fields">
  <legend>勤務先</legend>
  <%= render "address_fields", f: f, kind_of: :work, 
                                  obj: f.object.work_address  %>
</fieldset>
