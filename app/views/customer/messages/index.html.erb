<% @title = "  " %>
<h1><%= @title %></h1>

<div class="table-wrapper">

  <table class="listing" >
    <tr>
      <th> 送信者 </th>
      <th> 件名 </th>
      <th> 作成日時 </th>
      <th> アクション </th>
    </tr>
    <% @messages.each do |m| %>
      <tr>
        <td><%= m.sender %></td>
        <td><%= truncate( m.subject, legth: 20 ) %></td>
        <td><%= m.create_datetime %></td>
        <td class="actions">
          <%= link_to " 詳細 ", customer_message_path(m) %> |
          <%= link_to  " 削除 ",
                customer_message_path(m), method: :delete, 
              data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<% if false %>
        <td class="actions">
          <%= link_to " 詳細 ", staff_message_path(m) %> |
          <%= link_to_if m.kind_of?(CustomerMessage), " 削除 ",
                staff_message_path(m), method: :delete %>
        </td>

<% end %>
