<% @title = " プログラム一覧 " %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <%= paginate @programs %>

  <table class="listing">
    <tr>
      <th>タイトル</th>
      <th>申込み開始日時</th>
      <th>申込み終了日時</th>
      <th>最小参加者数</th>
      <th>最大参加者数</th>
      <th>アクション</th>
    </tr>
    <% @programs.each do |p| %>
      <tr>
        <td><%= p.title  %></td>
        <td class="date"><%= p.application_start_time_format  %></td>
        <td class="date"><%= p.application_end_time_format  %></td>
        <td class="numeric"><%= delimiter_num( p.min_number_of_participants ) %></td>
        <td class="numeric"><%= delimiter_num( p.max_number_of_participants ) %></td>
        <td class="actions"><%= link_to "詳細", [ :customer, p ] %></td>
      </tr>
    <% end %><%# --- each --- %>
  </table>

  <%= paginate @programs %>

</div>
